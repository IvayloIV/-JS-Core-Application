{{#if person}}
<div class="info">
    <div class="col">
        <span class="avatar">&#9787;</span>
    </div>
    <div class="col">
        <span class="name">{{person.firstName}}</span>
        <span class="name">{{person.lastName}}</span>
    </div>
</div>
<div class="info">
    <span class="info-line">&phone; {{person.phone}}</span>
    <span class="info-line">&#9993; {{person.currentEmail}}</span>
</div>
{{else}}
    <p>Click to see the contact.</p>
{{/if}}
<form id="formEditAd" class="form">
    <div><input type="hidden" name="id" value="{{ad._id}}" required /></div>
    <div><input type="hidden" name="publisher" value="{{ad.publisher}}" required /></div>
    <div>Title:</div>
    <div><input type="text" name="title" value="{{ad.title}}" required /></div>
    <div>Description:</div>
    <div><textarea name="description" rows="10" required>{{ad.description}}</textarea></div>
    <div>Date Published:</div>
    <div><input type="date" name="datePublished" value="{{ad.datePublished}}" required /></div>
    <div>Price:</div>
    <div><input type="number" step="0.01" name="price" value="{{ad.price}}" required /></div>
    <div>Image:</div>
    <div><input type="text" name="image" value="{{ad.image}}" required /></div>
    <div><input type="button" id="buttonEditAd" value="Edit" /></div>
</form>
<table>
    {{#if ads}}
    <tr>
        <th>Title</th>
        <th>Publisher</th>
        <th>Description</th>
        <th>Price</th>
        <th>Date Published</th>
        <th>Actions</th>
    </tr>
    {{#each ads}}
        <tr>
            <td style="display: none">{{_id}}</td>
            <td>{{title}}</td>
            <td>{{publisher}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{datePublished}}</td>
            <td>
                <a href="#">[Read More]</a>
                {{#if isOwner}}
                    <a href="#">[Delete]</a>
                    <a href="#">[Edit]</a>
                {{/if}}
            </td>
        </tr>
    {{/each}}
    {{else}}
        <h2>Advertisements</h2>
        <p>No advertisements available</p>
    {{/if}}
</table>
<h1 class="titleForm">Advertisements</h1>
<div id="ads" class="ads">
    <table>
        <tr>
            <th>Title</th>
            <th>Publisher</th>
            <th>Description</th>
            <th>Price</th>
            <th>Date Published</th>
        </tr>
        {{#each ads}}
        <tr data-id="{{_id}}">
            <td>{{title}}</td>
            <td>{{publisher}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{currentData}}</td>
            <td>
                <a href="#" id="readmore">[Read more]</a>
                {{#if isAuth}}
                <a href="#" id="delete">[Delete]</a>
                <a href="#" id="edit">[Edit]</a>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </table>
</div>
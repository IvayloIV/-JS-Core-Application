<div class="post">
    <div class="col thumbnail">
        <a href="{{post.url}}">
            <img src="{{post.imageUrl}}">
        </a>
    </div>
<div class="post-content">
    <div class="title">
        <a href="{{post.url}}">
            {{post.title}}
        </a>
    </div>
<div class="details">
    {{#if post.description}}
    <p>{{post.description}}</p>
    {{else}}
        No description
    {{/if}}
    <div class="info">
        submitted {{post.data}} ago by {{post.author}}
    </div>
<div class="controls">
    {{#if post.isOwner}}
        <ul>
            <li class="action"><a class="editLink" href="#/editPost/{{post._id}}">edit</a></li>
            <li class="action"><a class="deleteLink" href="#/deletePost/{{post._id}}">delete</a></li>
        </ul>
    {{/if}}
    </div>

    </div>
    </div>
        <div class="clear"></div>
    </div>
<form id="editPostForm" class="submitForm" method="post" action="#/editPost/{{currentPost._id}}">
    <label>Link URL:</label>
    <input name="url" type="text"
           value="{{currentPost.url}}">
    <label>Link Title:</label>
    <input name="title" type="text" value="{{currentPost.title}}">
    <label>Link Thumbnail Image (optional):</label>
    <input name="image" type="text"
           value="{{currentPost.imageUrl}}">
    <label>Comment (optional):</label>
    <textarea name="description">{{currentPost.description}}</textarea>
    <input id="btnEditPost" type="submit" value="Edit Post">
</form>